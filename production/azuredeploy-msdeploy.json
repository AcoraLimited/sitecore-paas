              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverPasswordSecretName')]"
            }
          },
          "licenseXml": {
            "value": "[parameters('licenseXml')]"
          },
          "sitecoreAdminPassword": {
            "reference": {
              "keyVault": {
