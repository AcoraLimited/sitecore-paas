{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  
  "parameters": {
    "deploymentId": {
      "type": "string",
      "defaultValue": "[resourceGroup().name]"
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]"
    },
    "cdTrafficManagerName": {
      "type": "string",
      "defaultValue": "[toLower(trim(concat(parameters('deploymentId'), '-cd-tm')))]"
    }, 
    "cdHostingplanAutoscaleName": {
      "type": "string",
      "defaultValue": "[toLower(trim(concat(parameters('deploymentId'), '-cd-autoscale')))]"      
    },
    "cdProductionWebApp": {
      "type": "object"
    },
    "cdFailoverWebApp": {
      "type": "object"
    }    
  },

  "variables": {},

  "resources": [

    /* Traffic Manager */    
    {       
      "type": "Microsoft.Network/trafficManagerProfiles",
      "name": "[parameters('cdTrafficManagerName')]",
      "apiVersion": "2017-05-01",
      "location": "global",
      "tags": {},
      "scale": null,
      "properties": {
          "profileStatus": "Enabled",
          "trafficRoutingMethod": "Priority",
          "dnsConfig": {
              "relativeName": "[parameters('cdTrafficManagerName'))]",
              "fqdn": "[concat(parameters('cdTrafficManagerName'),'.trafficmanager.net')]",
              "ttl": 300
          },
          "monitorConfig": {
              "protocol": "HTTP",
              "port": 80,
              "path": "/",
              "intervalInSeconds": 30,
              "toleratedNumberOfFailures": 3,
              "timeoutInSeconds": 10
          },
          "endpoints": [
                  {
                      "name": "Production",
                      "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                      "properties": {
                          "endpointStatus": "Enabled",
                          "targetResourceId": "[parameters('cdProductionWebApp').appResourceId]",
                          "target": "[parameters('cdProductionWebApp').url]",
                          "weight": 1,
                          "priority": 1,
                          "endpointLocation": "[parameters('cdProductionWebApp').location]"
                      }
                  },
                  {
                      "name": "Failover",
                      "type": "Microsoft.Network/trafficManagerProfiles/azureEndpoints",
                      "properties": {
                          "endpointStatus": "Enabled",
                          "targetResourceId": "[parameters('cdFailoverWebApp').appResourceId]",
                          "target": "[parameters('cdFailoverWebApp').url]",
                          "weight": 1,
                          "priority": 2,
                          "endpointLocation": "[parameters('cdFailoverWebApp').location]"
                      }
                  }
          ]
      }
    },


    /* CD Production Web App Autoscaling */
    {
      "type": "Microsoft.Insights/autoscaleSettings",
      "name": "[parameters('cdHostingplanAutoscaleName')]",
      "apiVersion": "2014-04-01",
      "location": "[parameters('cdProductionWebApp').location]",
      "tags": {},
      "scale": null,
      "properties": {
        "profiles": [
          {
            "name": "Scale CD Service by CPU Metric",
            "capacity": {
              "minimum": "1",
              "maximum": "3",
              "default": "1"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('cdProductionWebApp').planResourceId]",
                  "metricResourceLocation": "[parameters('cdProductionWebApp').location]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": 70
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('cdProductionWebApp').planResourceId]",
                  "metricResourceLocation": "[parameters('cdProductionWebApp').location]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": 50
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              }
            ],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": [
                  "Monday",
                  "Tuesday",
                  "Wednesday",
                  "Thursday",
                  "Friday",
                  "Saturday",
                  "Sunday"
                ],
                "hours": [
                  0
                ],
                "minutes": [
                  0
                ]
              }
            }
          },
          {
            "name": "{\"name\":\"Default\",\"for\":\"Scale CD Service by CPU Metric\"}",
            "capacity": {
              "minimum": "1",
              "maximum": "1",
              "default": "1"
            },
            "rules": [],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": [
                  "Monday",
                  "Tuesday",
                  "Wednesday",
                  "Thursday",
                  "Friday",
                  "Saturday",
                  "Sunday"
                ],
                "hours": [
                  23
                ],
                "minutes": [
                  59
                ]
              }
            }
          }
        ],
        "enabled": true,
        "name": "[parameters('cdHostingplanAutoscaleName')]",
        "targetResourceUri": "[parameters('cdProductionWebApp').planResourceId]",
        "targetResourceLocation": "[parameters('cdProductionWebApp').location]",
        "notifications": []
      }
    },

    /* CD Failover Web App Autoscaling */
    {
      "type": "Microsoft.Insights/autoscaleSettings",
      "name": "[concat(parameters('cdHostingplanAutoscaleName'), '-failover')]",
      "apiVersion": "2014-04-01",
      "location": "[parameters('cdFailoverWebApp').location]",
      "tags": {},
      "scale": null,
      "properties": {
        "profiles": [
          {
            "name": "Scale CD Service by CPU Metric",
            "capacity": {
              "minimum": "1",
              "maximum": "3",
              "default": "1"
            },
            "rules": [
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('cdFailoverWebApp').planResourceId]",
                  "metricResourceLocation": "[parameters('cdFailoverWebApp').location]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "GreaterThan",
                  "threshold": 70
                },
                "scaleAction": {
                  "direction": "Increase",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              },
              {
                "metricTrigger": {
                  "metricName": "CpuPercentage",
                  "metricNamespace": "",
                  "metricResourceUri": "[parameters('cdFailoverWebApp').planResourceId]",
                  "metricResourceLocation": "[parameters('cdFailoverWebApp').location]",
                  "timeGrain": "PT1M",
                  "statistic": "Average",
                  "timeWindow": "PT10M",
                  "timeAggregation": "Average",
                  "operator": "LessThan",
                  "threshold": 50
                },
                "scaleAction": {
                  "direction": "Decrease",
                  "type": "ChangeCount",
                  "value": "1",
                  "cooldown": "PT5M"
                }
              }
            ],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": [
                  "Monday",
                  "Tuesday",
                  "Wednesday",
                  "Thursday",
                  "Friday",
                  "Saturday",
                  "Sunday"
                ],
                "hours": [
                  0
                ],
                "minutes": [
                  0
                ]
              }
            }
          },
          {
            "name": "{\"name\":\"Default\",\"for\":\"Scale CD Service by CPU Metric\"}",
            "capacity": {
              "minimum": "1",
              "maximum": "1",
              "default": "1"
            },
            "rules": [],
            "recurrence": {
              "frequency": "Week",
              "schedule": {
                "timeZone": "UTC",
                "days": [
                  "Monday",
                  "Tuesday",
                  "Wednesday",
                  "Thursday",
                  "Friday",
                  "Saturday",
                  "Sunday"
                ],
                "hours": [
                  23
                ],
                "minutes": [
                  59
                ]
              }
            }
          }
        ],
        "enabled": true,
        "name": "[parameters('cdHostingplanAutoscaleName')]",
        "targetResourceUri": "[parameters('cdFailoverWebApp').planResourceId]",
        "targetResourceLocation": "[parameters('cdFailoverWebApp').location]",
        "notifications": []
      }
    }

  ]

}