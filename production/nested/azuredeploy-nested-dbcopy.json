{
    "$schema": "http://schema.management.azure.com/schemas/2014-04-01-preview/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "deploymentId": {
            "type": "string",
            "defaultValue": "[resourceGroup().name]"
        },
        "targetDatabaseName": {
            "type": "string"
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]"
        },
        "sourceDatabaseName": {
            "type": "string"
        },
        "targetServerName": {
            "type": "string"
        }
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers/databases",
            "apiVersion": "2014-04-01-preview",
            "location": "[parameters('location')]",
            "name": "[concat(parameters('targetServerName'), '/', parameters('targetDatabaseName'))]",
            "properties": {
                "createMode": "Copy",
                "souceDatabaseId": "[resourceId('Microsoft.Sql/servers/databases', parameters('sourceDatabaseName'))]"                
            }
        }            
    ]
}